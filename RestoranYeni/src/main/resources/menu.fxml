<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<HBox spacing="25" xmlns:fx="http://javafx.com/fxml" fx:controller="com.restoran.MenuController"
      styleClass="root">

    <stylesheets>
        <URL value="@/style.css" />
    </stylesheets>

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="content-panel">

        <Label text="MENÜ LİSTESİ" styleClass="header-label"/>

        <TableView fx:id="tblMenu" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMenuAd" text="Yemek Adı" minWidth="150" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="colMenuFiyat" text="Fiyat (TL)" minWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
            <Label text="Adet:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtAdet" text="1" maxWidth="60" alignment="CENTER"/>
            <Button text="Sepete Ekle ➜" onAction="#sepeteEkle" styleClass="action-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>

    <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="content-panel">
        <Label text="SİPARİŞ SEPETİ" styleClass="header-label"/>

        <TableView fx:id="tblSepet" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSepetAd" text="Yemek" minWidth="150" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="colSepetAdet" text="Adet" minWidth="60" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colSepetTutar" text="Tutar (TL)" minWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                <TableColumn fx:id="colSil" text="İşlem" minWidth="70" style="-fx-alignment: CENTER;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="lblGenelToplam" text="Toplam: 0.0 TL" styleClass="total-label"/>
        </HBox>

        <Button text="✓ SİPARİŞİ TAMAMLA" onAction="#siparisiTamamla" maxWidth="Infinity" styleClass="success-button" />

    </VBox>

</HBox>